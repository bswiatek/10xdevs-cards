---
import AuthLayout from "@/layouts/AuthLayout.astro";
import { ForgotPasswordRequestForm } from "@/components/auth/ForgotPasswordRequestForm";
---

<AuthLayout title="Odzyskiwanie hasła - Generator Fiszek AI">
  <div class="space-y-6">
    <!-- Logo/Brand -->
    <div class="text-center">
      <h1 class="text-2xl font-bold">Odzyskiwanie hasła</h1>
      <p class="mt-2 text-sm text-muted-foreground">Wyślij prośbę o reset hasła do administratora</p>
    </div>

    <!-- Forgot Password Form -->
    <div class="rounded-lg border bg-card p-6 shadow-sm">
      <ForgotPasswordRequestForm client:load />
    </div>

    <!-- Links -->
    <div class="text-center text-sm">
      <p class="text-muted-foreground">
        Pamiętasz hasło?{" "}
        <a href="/login" class="text-primary hover:underline">Zaloguj się</a>
      </p>
    </div>
  </div>
</AuthLayout>
